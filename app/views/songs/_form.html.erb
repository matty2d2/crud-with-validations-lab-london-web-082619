
<%= form_for(@song) do |f| %>

    <% if @song.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors:</h3>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.label "Title" %><br>
    <%= f.text_field :title %> <br> <br>

    <%= f.label "Released" %>
    <%= f.check_box :released, {}, checked_value ="true", unchecked_value = "false"%> <br> <br>

    <%= f.label "Release Year" %><br>
    <%= f.number_field :release_year %> <br>

    <%= f.label "Artist Name" %><br>
    <%= f.text_field :artist_name %> <br>

    <%= f.label "Genre" %><br>
    <%= f.text_field :genre %> <br> <br>

    <%= f.submit %>
<% end %>

