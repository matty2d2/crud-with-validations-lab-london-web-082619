<h1>All Songs</h1>

<table style="width:80%">
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Artist name</th>
      <th></th>
    </tr>

    <tbody>
        <% @songs.each do |song| %>
        <tr>
            <td><%= song.title %></td>
            <td><%= song.release_year %></td>
            <td><%= song.genre %></td>
            <td><%= song.artist_name %></td>
            <td>
            <%= link_to "View", song %> |
            <%= link_to 'Edit', edit_song_path(song) %> |
            <%= form_tag song, method: "delete" do %>
                <%= submit_tag "Delete" %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
    

